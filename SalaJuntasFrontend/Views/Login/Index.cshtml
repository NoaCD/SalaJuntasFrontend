<script>
    let btnCreate = document.getElementById("btnRegisterUser");
    

    btnCreate.addEventListener("click", function(){

        loadModal();
    });

    function loadModal(){
        let response = fetch('/usuarios/create').then(response=> response.text())
        .then( function(res){
            console.log(res)
          $("#modal").html(res);
          $("#modal").modal('show');
        })
        .catch(e=>console.error(e));
    }
    function cerrarModal(){
          $("#modal").modal('hide');

    }

</script>
