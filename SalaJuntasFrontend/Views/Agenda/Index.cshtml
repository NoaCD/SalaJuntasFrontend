@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <div id="agenda"></div>
</div>

<!----------------------------------- INICIO MODAL-------------------------------->
<!-- Button trigger modal -->
<!-- Modal Creacion y Edicion -->
<div class="modal fade" id="evento" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal"> Realiza tu evento </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="txtTitle"> Titulo </label>
                    <input type="text" class="form-control" id="txtTitle" placeholder="Escribe un título para tu evento">
                </div>
                <div class="form-group">
                    <label for="txtDescription">Descripción </label>
                    <textarea class="form-control" id="txtDescription" rows="3" placeholder="Describé lo que harás'"></textarea>
                </div>
                <div class="form-group">
                    <label for="txtStart">Fecha </label>
                    <input disabled type="text" class="form-control" id="txtStart" placeholder="">
                </div>
                <div class="form-group">
                    <label for="tHoraInicio">Hora Inicio </label>
                    <input type="time" class="form-control" id="tHoraInicio" placeholder="">
                </div>
                <div class="form-group">
                    <label for="tHoraFin">Hora Fin </label>
                    <input type="time" class="form-control" id="tHoraFin" placeholder="">
                </div>
                <div class="form-group">
                    <label for="txtBackgroundColor" class="form-label">Color</label>
                    <input type="color" class="form-control form-control-color" id="txtBackgroundColor" value="#563d7c" title="Elige un color sin miedo!">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="addEvent">Agregar</button>
                <button type="button" class="btn btn-warning">Modificar</button>
                <button type="button" class="btn btn-danger">Eliminar</button>


            </div>
        </div>
    </div>
</div>
<!----------------------------------- FIN MODAL------------------------------------------->
<!----------------------------------- INICIO MODAL-------------------------------->
<!-- Modal Detalle -->
<div class="modal fade" id="mostrarDetalleEvento" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal"> Detalle del evento </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card shadow">
                    <h6 class="float-end"><span id="txtShowDateProgramated" class="badge bg-primary"></span></h6>
                    <div class="card-body text-center">
                        <h5 class="card-title" id="txtShowTitle">Event Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted" id="txtShowSubtitle"> DepartamentName </h6>
                        <hr />
                        <p class="card-text" id="txtShowDescription">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <p class="card-text"><small id="txtShowDuration" class="text-muted"></small></p>
                        <p class="card-text"><small id="txtShowInLapses" class="text-muted"></small></p>
                        <p class="card-text"><small id="txtShowUpdatedAt" class="text-muted"></small></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-warning">Modificar</button>
                <button type="button" class="btn btn-danger">Eliminar</button>
            </div>
        </div>
    </div>
</div>
<!----------------------------------- FIN MODAL------------------------------------------->
@section Scripts{
<script src="/scripts/funcionesPropias.js" type="text/javascript"></script>
<script src="/scripts/alerts.js" type="text/javascript"></script>
<script src="/scripts/agenda.js" type="text/javascript"></script>


}